<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="start" controller="mygame.GUI.StartScreen">
        <layer id="layer" height="50%" width="50%" backgroundColor="#003f" childLayout="center">
            <panel id="panel" height="25%" width="35%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
                <interact onClick="startGame(hud)"/>
                
            </panel>
        </layer>
    </screen>

    <screen id="hud"controller="mygame.GUI.IngameHUD">
        <layer id="background" height="100%" width="100%" childLayout="center">
            <image filename="Interface/Nifty/Transparent.png"  width="100%" height="100%"></image>
        </layer>
        <layer id="buttonlayer" x="0"y="0"height="64" width="100%" childLayout="absolute">
            <panel id="buttons"x="0"y="0"height="64" width="100%" backgroundColor="#999f" childLayout="absolute"visibleToMouse="true">
                <image filename="Interface/Terrain/Icon.png"x="0"y="0" childLayout="absolute" width="64" height="64">
                    <interact onClick="toggleShovelWindow()"/>
                </image>
                <image filename="Interface/Roads/Icon.png"x="65"y="0" childLayout="absolute" width="64" height="64">
                    <interact onClick="toggleRoadWindow()"/>
                </image>
            </panel>
        </layer>
        <layer id="windows" width="200"height="300"childLayout="absolute">
            <control id="shovelWindow" name="window"title="Shovel"width="190"height="300"x="200"y="200"hideOnClose="true"closeable="false">
                <panel id="shovelpanel"valign="top"align="left"height="100%" width="100%" backgroundColor="#999f" childLayout="absolute"visibleToMouse="true">
                    <control id="sliderbrushsize" name="horizontalSlider" height="30px"width="100%"x="0"y="10"visibleToMouse="true"min="1"max="3"initial="3"buttonStepSize="1"/>
                    <control id="brushsizetext"name="label" font="Interface/Fonts/Eurocentric.fnt"text="Brush size: " x="10"y="46"/>
                    <control id="brushsizetextactual"name="label" font="Interface/Fonts/Eurocentric.fnt"text="${CALL.getBrushSize()}" x="100"y="46"/>
                    <control id="brushmodebutton" name="button" label="${CALL.getBrushMode()}" x="10"y="80"width="90%"/>
                    <control id="usetexture" name="checkbox" x="10"y="120"/>
                    <control id="brushsizetext"name="label" font="Interface/Fonts/Eurocentric.fnt"text="Use this texture" x="40"y="120"/>
                    <control id="textureforshovel" x="30"y="150"name="imageSelect" width="126px" imageWidth="80px" imageHeight="80px" imageList="Textures/grasstexturesmall.png,Textures/rocktexturesmall.png" />
                </panel>
            </control>
            <control id="roadWindow" name="window"title="Roads"width="200"height="500"x="500"y="200"hideOnClose="true"closeable="false">
                <panel id="roadpanel"valign="top"align="left"height="100%" width="100%" backgroundColor="#999f" childLayout="absolute"visibleToMouse="true">
                    <image id="roadupimg"filename="Interface/Roads/up.png"x="6"y="100" childLayout="absolute" width="64" height="64">
                        <interact onClick="roadDirectionUp()">   
                        </interact>
                        <effect>
                            <onCustom name="border" border="5px" color="#ffff" timeType="infinite"length="infinite"oneShot="true"/>
                        </effect>
                    </image>
                    <image id="roadrightimg"filename="Interface/Roads/right.png"x="78"y="100" childLayout="absolute" width="64" height="64"visibleToMouse="true">
                        <interact onClick="roadDirectionRight()">   
                        </interact>
                        <effect>
                            <onCustom name="border" border="5px" color="#ffff" timeType="infinite"length="infinite"oneShot="true"/>
                        </effect>
                    </image>
                    <image id="roadleftimg"filename="Interface/Roads/left.png"x="6"y="176" childLayout="absolute" width="64" height="64"visibleToMouse="true">
                        <interact onClick="roadDirectionLeft()">   
                        </interact>
                        <effect>
                            <onCustom name="border" border="5px" color="#ffff" timeType="infinite"length="infinite"oneShot="true"/>
                        </effect>
                    </image>
                    <image id="roaddownimg"filename="Interface/Roads/down.png"x="78"y="176" childLayout="absolute" width="64" height="64"visibleToMouse="true">
                        <interact onClick="roadDirectionDown()">   
                        </interact>
                        <effect>
                            <onCustom name="border" border="5px" color="#ffff" timeType="infinite"length="infinite"oneShot="true"/>
                        </effect>
                    </image>
                    <image filename="Interface/Roads/downhill.png"x="6"y="260" childLayout="absolute" width="48" height="48"visibleToMouse="true">
                        <interact onClick="">   
                        </interact>
                    </image>
                    <image filename="Interface/Roads/flat.png"x="60"y="260" childLayout="absolute" width="48" height="48"visibleToMouse="true">
                        <interact onClick="">   
                        </interact>
                    </image>
                    <image filename="Interface/Roads/uphill.png"x="110"y="260" childLayout="absolute" width="48" height="48"visibleToMouse="true">
                        <interact onClick="">   
                        </interact>
                    </image>
                    <image filename="Interface/Roads/build.png"x="6"y="320" childLayout="absolute" height="64"width="170"visibleToMouse="true">
                        <interact onClick="">   
                        </interact>
                    </image>
                    <image filename="Interface/Roads/selectspot.png"x="6"y="390" childLayout="absolute" width="64" height="64"visibleToMouse="true">
                        <interact onClick="">   
                        </interact>
                    </image>
                </panel>
            </control>
        </layer>
    </screen>
</nifty>
